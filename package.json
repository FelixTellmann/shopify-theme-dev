{
  "name": "shopify-theme-dev",
  "version": "2.2.22",
  "description": "Shopify Theme development with full Typescript Support",
  "author": "Felix Tellmann",
  "license": "MIT",
  "bin": {
    "shopify-theme-dev": "shopify-theme-dev.ts",
    "shopify-app-dev": "shopify-app-dev.ts"
  },
  "main": "./index.ts",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FelixTellmann/shopify-theme-dev.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "shopify",
    "api",
    "typescript",
    "theme",
    "cms"
  ],
  "peerDependencies": {
    "ts-node": ">= ^10.9.1 || >= ^11 || >= ^12",
    "typescript": ">= ^4.9.3 || >= ^5"
  },
  "dependencies": {
    "@swc/core": "^1.3.21",
    "@swc/helpers": "^0.4.14",
    "chalk": "4.1.2",
    "commander": "^9.4.1",
    "decache": "^4.6.1",
    "dotenv": "^16.0.3",
    "immer": "^9.0.16",
    "inquirer": "9.1.4",
    "jsdom": "^20.0.0",
    "json-schema-to-typescript": "^12.0.0",
    "node-watch": "^0.7.3",
    "regenerator-runtime": "^0.13.11",
    "shopify-typed-node-api": "^2.0.20",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "zustand": "^4.1.4"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.11.10",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "fx-style": "^2.1.1",
    "typescript": "^4.9.3"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": [
      "./node_modules/fx-style/"
    ],
    "ignorePatterns": [
      ".github/**/*"
    ],
    "plugins": [
      "sort-keys-fix"
    ],
    "rules": {
      "typescript-sort-keys/interface": 0,
      "sort-keys-fix/sort-keys-fix": 0,
      "import/no-anonymous-default-export": 0,
      "react/no-unescaped-entities": 0,
      "react/jsx-sort-props": 0,
      "node/no-unpublished-require": 0
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "arrowParens": "always",
    "singleQuote": false,
    "bracketSpacing": true,
    "printWidth": 100,
    "indentChains": true,
    "exportCurlySpacing": true,
    "importCurlySpacing": true,
    "allowBreakAfterOperator": false,
    "breakLongMethodChains": true,
    "importFormatting": "oneline",
    "endOfLine": "auto"
  }
}
